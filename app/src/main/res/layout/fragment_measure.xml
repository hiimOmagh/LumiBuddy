<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MeasureFragment"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Lamp type selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lamp Type"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:id="@+id/lampTypeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- CameraX Preview & Measure Button -->
        <androidx.camera.view.PreviewView
            android:id="@+id/cameraPreview"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@android:color/darker_gray"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/cameraMeasureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Measure with Camera"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dp" />

        <!-- Measurement Cards Flipper -->
        <ViewFlipper
            android:id="@+id/measureFlipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right">

            <include
                layout="@layout/measurement_card"
                android:id="@+id/luxCard" />

            <include
                layout="@layout/measurement_card"
                android:id="@+id/ppfdCard" />

            <include
                layout="@layout/measurement_card"
                android:id="@+id/dliCard" />

        </ViewFlipper>

        <!-- DLI Widget (can be further styled as needed) -->
        <LinearLayout
            android:id="@+id/dliWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DLI Calculator"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/dliColor" />

            <TextView
                android:id="@+id/dliValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textStyle="bold"
                android:textSize="32sp"
                android:textColor="@color/dliColor"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/minusHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />

                <TextView
                    android:id="@+id/hourValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 h"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp" />

                <Button
                    android:id="@+id/plusHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/preset12h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 h"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/preset18h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 h"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/preset24h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 h" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
