<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/editPlantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:autofillHints=""
        android:backgroundTint="@color/black"
        android:hint="@string/plant_name_input_desc"
        android:importantForAccessibility="yes"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#757575" />

    <EditText
        android:id="@+id/editPlantType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:autofillHints=""
        android:backgroundTint="?attr/colorPrimary"
        android:hint="@string/plant_type_input_desc"
        android:importantForAccessibility="yes"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="#757575" />

    <ImageView
        android:id="@+id/plantImagePreview"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:background="@color/black"
        android:contentDescription="@string/plant_image_desc"
        android:elevation="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_eco" />

    <!-- Material style button for picking image -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/pickImageBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:text="@string/pick_image"
        android:textColor="#2E7D32" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/searchPlantBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/search_plant_db"
        android:textColor="#2E7D32" />

</LinearLayout>
