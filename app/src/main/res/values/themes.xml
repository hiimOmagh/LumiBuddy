<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.LumiBuddy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/dliColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Backgrounds -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/primaryText</item>
        <item name="colorOutline">@color/cardBorder</item>
        <!-- Text -->
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <!-- FAB -->
        <item name="floatingActionButtonStyle">
            @style/Widget.MaterialComponents.FloatingActionButton
        </item>
        <!-- CardView (for consistent rounded corners) -->
        <item name="cardViewStyle">@style/CardView</item>
        <!-- Status bar (optional, for full-bleed) -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- Navigation Bar color (optional) -->
        <item name="android:navigationBarColor">@color/white</item>
        <!-- For ripple/selector effect -->
        <item name="android:colorControlHighlight">@color/cardBorder</item>
    </style>

    <!-- CardView defaults -->
    <style name="CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>
